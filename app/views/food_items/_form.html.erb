<%= form_for([@restaurant, @food_item]) do |f| %> 
  <%= render 'shared/error_messages', object: @food_item %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :price %><br>
    <%= f.number_field :price, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    <%= link_to 'Back', restaurant_food_items_path(@restaurant), class: "btn btn-default pull-right" %>
  </div>
<% end %>
