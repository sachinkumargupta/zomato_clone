<% if logged_in? %>
  <div class="container">
    <div class="row well">
      <h2>Restaurant Images:</h2>
      <%= form_for([@restaurant, @restaurant.images.build]) do |f| %>
        <div class="form-group">
          <%= f.label :category %>
          <%= f.select(:category, options_for_select([['Food','Food'],['Restaurant','Restaurant'],['Menu','Menu'],['Other','Other']])) %>
        </div>
        
        <div class="form-group">
          <%= f.label :photo %>
          <%= f.file_field :photo %>
        </div>  
        
        <br>
        <div class="form-group">
          <%= f.submit%>
        </div>
      <% end %>   
    </div>
  </div>
<% end %>