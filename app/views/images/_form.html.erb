<% if logged_in? %>
  <div class="row form-inline">
    <h3 class="image-form-title">Add an images:</h3>
    <div class="col-sm-8 well">
      <%= form_for([@restaurant, @restaurant.images.build]) do |f| %>
        <div class="form-group">
          <%= f.label "Category:" %>
          <%= f.select(:category, options_for_select([['Food','Food'],['Restaurant','Restaurant'],['Menu','Menu'],['Other','Other']]), class: "form-control select-button") %>
        </div>
        
        <div class="form-group">
          <%= f.file_field :photo %>
        </div>  
        

        <div class="form-group">
          <%= f.submit %>
        </div>
      <% end %>
    </div>   
  </div>
<% end %>