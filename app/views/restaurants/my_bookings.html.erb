<div class="panel panel-default">
  <div class="panel-body">
    <h2>Current Bookings</h2>

    <table class="table table-responsive table-striped">
      <tr>
        <th><strong>Booking ID</strong></th>
        <th><strong>Date and Time</strong></th>
        <th><strong>Duration</strong></th>
        <th><strong>Restaurant Name</strong></th>
        <th><strong>Head Count</strong></th>
        <th colspan="2"></th>
      </tr>
      
      <% @book_tables.each do |book| %>
        <% if book.date >= Date.today - 1.days %>
          <tr>
            <td><%= book.id %></td>
            <td><%= book.date %></td>
            <td><%= book.duration %></td>
            <td><%= book.restaurant.name %></td>
            <td><%= book.headcount %></td>
            <td><%= link_to 'Show', [book.restaurant, book] %></td>
            <td><%= link_to 'Delete', [book.restaurant, book], method: :delete, data: {confirm: "Are you sure?"} %></td>
          </tr>
        <% end %>  
      <% end %>  
    </table>
  </div>
</div><br><br>


