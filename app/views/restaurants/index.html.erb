<div class="row">
  <div class="col-sm-3 col-md-3">
    <%= form_tag filter_restaurants_path, method: :get, role: "filter" do %>
      <div class="form-group">
        <label for="type">Restaurant Type</label>
        <%= text_field_tag :type, params[:type], class: "form-control" %>
      </div>
      <div class="form-group">
        <label for="location">Location</label>
        <%= text_field_tag :location, params[:location], class: "form-control" %>
      </div>
      <%= submit_tag "filter", class: "btn btn-default"%>
    <% end %>
  </div>

  <div class="col-sm-9 col-md-9">
    <% @restaurants.each do |restaurant| %>
    <div class="well clearfix restaurant-list">
      <div class="row">
        <div class="col-sm-4 col-lg-3">
          <% if restaurant.cover_photo_file_name %>
            <%= link_to restaurant_path(restaurant) do %>
            <%= image_tag restaurant.cover_photo.url(:medium), class: "img-responsive" %>
            <% end %>
          <% end %>
        </div> 
        <div class="col-sm-8 col-lg-9 restaurant-list-body">
          <h3><strong><%= link_to restaurant.name, restaurant %></strong></h3>
          <p>
            <strong>Address: </strong>
            <%= restaurant.address %>
          </p>
          <p>
            <%= restaurant.restaurant_type %>
          </p>
          <div class="btn-group">
            <% if logged_in? && current_user.admin? %>
              <%= link_to 'Edit', edit_restaurant_path(restaurant), class: "btn btn-default btn-sm" %>
              <%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-default btn-sm" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>